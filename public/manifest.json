{
    "manifest_version": 3,
    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0.0",
    "default_locale": "en",
    "action": {
        "default_popup": "index.html",
        "default_title": "__MSG_extension_name__"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "offscreen",
        "clipboardWrite"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "icons": {
        "128": "icon128.png"
    }
}